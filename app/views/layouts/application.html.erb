        <div class="banner">
        <div class="list-group cbp-l-filters-button js-filters-juicy-projects">
            <div class="cbp-filter-item list-group-item logo" align="center">
              <a href="/"><img src="<%= image_path 'logo12.png' %>" alt="img" /></a>
            </div>
            <div class="container" align="center">
              <nav id="topMenu">
                <ul>
                  <li><strong class="menuLink" style="color:#000"> <%=current_user.name%> </strong></li>
                  <li>|</li>
                  <li><a href="/user/info"><span class="menuLink" style="color:#000"> About </span></a></li>
                  <li>|</li>
                  <li>
