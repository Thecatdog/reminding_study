                  <li>| </li>
                  <li><span class="menuLink" style="color:#000"> <%= button_to "logout", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure?"}, style: "color:black; background:#fff; border:0px;height:40px ;vertical-align: middle", class:"menuLink" %> </span></li>
