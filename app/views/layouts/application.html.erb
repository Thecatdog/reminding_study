              </nav>
            </div>
          </div>
        </div>
      </div>
      <!-- /Menu-->
        
        <!--footer -->
        <footer class="footer" style="background-color:#e8e8ea; height:45pt;">
            <div class="container-fluid">
                <div class="row">
                    <div class="hidden-xs col-sm-3 col-md-4">
                        <small class="footer-small">2017 © &nbsp;TEAM REMINDING</small>
                    </div>

                </div>
            </div>
        </footer>
        <!-- /footer -->
